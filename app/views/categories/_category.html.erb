<div id="<%= dom_id category %>">
  <h1 class="mb-5">
    <%= category.name %>
  </h1>
  



  <div class=" resource-columns justify-content-between ">
    <% category.resources.each do |resource| %>
    <div class="d-flex justify-content-between align-items-center">
      <%= link_to resource.document, :target => "_blank", class: "doc-link" do %>
        <i class="bi bi-file-earmark-text-fill"></i>
        <%= resource.title%> 
      <% end %>
      <% if current_user.payroll? || current_user.admin? %>
        <div>
          <%= link_to "Edit", edit_resource_path(resource), class: "btn btn-secondary " %>
          <%= link_to "Destroy", resource_path(resource), data: {
                      turbo_method: :delete,
                      turbo_confirm: "Are you sure?"
                    }, class: "btn btn-danger " %>
        </div>

      <% end %>
    </div>
    
    <% end %>
  </div>
  <% if current_user.payroll? || current_user.admin? %>
  <div class="spacer my-2"></div>
  <h2 class="pb-3" >Add New <%= category.name %></h2>
  

    
    <%= link_to "Add New Resource", new_resource_path, class:"orange-btn w-50 text-center" %>
  <% end %>
  

</div>
