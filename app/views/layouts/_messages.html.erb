<div class="container">

<% flash.each do |name, msg| %>
  
  <div class="alert  alert-<%= name =="notice" ? "success" : "danger" %>  alert-dismissable d-flex align-items-center justify-content-between my-3" role="alert">
  
  <%= msg %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>

  </div>