<div class="content-home  mb-5 d-flex flex-column align-items-center justify-content-center">

<% if user_signed_in?%>
<%= render  template: 'pages/dashboard'%>

<% else %>
    <h1 class="my-3">Employee Login</h1>

    <div class="login-form m-auto py-2 px-5 border border-secondary rounded shadow">

        <%= form_for(:user, :url => session_path(:user)) do |f| %>
            <div class="field p-2">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "login-fields" %>
            </div>

            <div class="field p-2">
                <%= f.label :password %><br />
                <%= f.password_field :password, autocomplete: "current-password", class: "login-fields" %>
            </div>
        
            <div class="field p-2 text-center">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
            </div>
        

            <div class="actions p-2 text-center">
                <%= f.submit "Log in" %>
            </div>
            
            <div class="field p-2 text-center">
                <%= link_to "Forgot your password?", new_password_path(:user) %>
            </div>

        <% end %>

        <% end %>

    </div>
</div>