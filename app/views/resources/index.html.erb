<h1 class=" text-left" >Employee Resources</h1>

<% if current_user.payroll? || current_user.admin? %>
  <%= link_to "Add New Resource", new_resource_path, class:"orange-btn w-50 my-5 text-center" %>
<% end %>


<div class=" d-flex flex-wrap  gap-1">
  <% @resources.each do |resource| %>
    <div class="w-50 d-flex flex-row justify-content-between py-2 gap-2 ">
      <%= link_to resource_path(resource) do %>
       <span class="glyphicon glyphicon-align-left" aria-hidden="true"></span>
        <%= resource.title %>
        <% end %>
        <% if current_user.payroll? || current_user.admin? %>
        <%= link_to "Edit", edit_resource_path(resource), class: "btn btn-secondary" %>
        <%# link_to "View/Download", resource.document, class: "orange-btn" %>
        <%= link_to "Destroy", resource_path(resource), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  }, class: "btn btn-danger" %>

               
                  <% end %>
        
      
    </div>
  <% end %>
</div>


 <div class="spacer relative"></div>

  <div class="my-5 back-btn">
  <%= link_to "Return To Your Dashboard", root_path, class: "orange-btn px-5" %>
  </div>

